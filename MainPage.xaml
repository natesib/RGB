<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RGB.MainPage">
    <Grid ColumnDefinitions="*,auto" RowDefinitions="*,auto,auto,auto" ColumnSpacing="25" Padding="30">
        <Rectangle x:Name="Kwadrat" Grid.Row="0" Grid.ColumnSpan="2" Fill="Silver"/>
        <Slider x:Name="SliderR" Grid.Row="1" ValueChanged="Slider_ValueChanged"/>
        <Label Text="Czerwony" TextColor="Red" FontSize="15" WidthRequest="70" Grid.Row="1" Grid.Column="1" HorizontalTextAlignment="End"/>
        <Slider x:Name="SliderG" Grid.Row="2" ValueChanged="Slider_ValueChanged"/>
        <Label Text="Zielony" TextColor="Green" FontSize="15" WidthRequest="70" Grid.Row="2" Grid.Column="1" HorizontalTextAlignment="End"/>
        <Slider x:Name="SliderB" Grid.Row="3" ValueChanged="Slider_ValueChanged"/>
        <Label Text="Niebieski" TextColor="Blue" FontSize="15" WidthRequest="70" Grid.Row="3" Grid.Column="1" HorizontalTextAlignment="End"/>
    </Grid>
</ContentPage>
